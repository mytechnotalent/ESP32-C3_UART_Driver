{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (ESP32-C3 via OpenOCD)",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/build/main.elf",
            "target": ":3333",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "gdbpath": "${workspaceFolder}/scripts/gdb-wrapper.sh",
            "stopAtConnect": true,
            "autorun": [
                "set remote hardware-watchpoint-limit 2",
                "monitor reset halt",
                "maintenance flush register-cache",
                "set confirm off",
                "set output-radix 16",
                "load",
                "monitor reset halt",
                "thb main",
                "continue",
                "delete"
            ],
            "valuesFormatting": "parseText",
            "preLaunchTask": "OpenOCD"
        }
    ]
}